		<include refid="zcRepairWhere"/>
	</select>

	<select id="zcRepairCList" resultType="com.itycu.server.dto.ZcInfoDto">
		select t.*
		,t_creator.nickname as creator
		from v_zc_info t
		LEFT OUTER JOIN sys_user t_creator ON t.create_by=t_creator.id
		<include refid="zcRepairWhere"/>
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>


</mapper>
