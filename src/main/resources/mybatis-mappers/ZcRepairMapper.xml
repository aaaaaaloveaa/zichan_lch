			</if>
			<if test="params.warrantyperiod != null and params.warrantyperiod != ''">
				and t.warrantyperiod = #{params.warrantyperiod}
			</if>
			<if test="params.del != null and params.del != ''">
				and t.del = #{params.del}
			</if>
			<if test="params.bf != null and params.bf != ''">
				and t.bf = #{params.bf}
